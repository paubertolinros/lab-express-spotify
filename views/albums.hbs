<div class="main-body-container">
  <div class="main-title-container">
    <h2 class="main-title">Albums &nbsp;</h2>
    {{#each artistName}}
    <br>
    <h2 class="main-title"> <span> {{ name }}&nbsp; </span> </h2>
    {{/each}}
  </div>
  <div class="info-main-container">
    {{#each albumData}}
    <div class="image-title-artist">
      <img class="image" src={{images.[0].url}} alt="{{name}}">
      <h3 class="main-title"> {{name}} </h3>
      <button class="button"> <a href="/albums/{{../artistId}}/tracks/{{id}}">See tracks</a></button>
    </div>
    {{/each}}
  </div>
</div>

